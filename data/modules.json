[
  {
    "id": "fundamentals",
    "title_zh": "基础抓取",
    "title_en": "Fundamentals of Web Scraping",
    "time_estimate": "2-3 hours",
    "concepts": [
      {
        "id": "http-request-response",
        "title_zh": "请求与响应",
        "title_en": "Request and Response",
        "summary_zh": "理解 URL、请求方法、响应状态码与内容类型。",
        "summary_en": "Understand URLs, request methods, status codes, and content types.",
        "pitfalls_zh": "忽略状态码或内容类型会导致解析失败。",
        "pitfalls_en": "Ignoring status codes or content types leads to parsing failures.",
        "use_cases_zh": "诊断爬取失败、定位重定向与访问限制。",
        "use_cases_en": "Diagnose crawl failures, redirects, and access limits.",
        "terms": [
          { "zh": "状态码", "en": "status code" },
          { "zh": "内容类型", "en": "content type" }
        ]
      },
      {
        "id": "robots-and-ethics",
        "title_zh": "robots 与合规",
        "title_en": "robots and Compliance",
        "summary_zh": "理解 robots.txt 的作用与合规边界。",
        "summary_en": "Understand robots.txt and compliance boundaries.",
        "pitfalls_zh": "把 robots 当成技术限制而非合规提示。",
        "pitfalls_en": "Treating robots as a technical block instead of a compliance hint.",
        "use_cases_zh": "制定爬取策略与访问频率。",
        "use_cases_en": "Set crawl policy and access rates.",
        "terms": [
          { "zh": "爬取频率", "en": "crawl rate" }
        ]
      }
    ],
    "exercises": [
      {
        "id": "status-code-check",
        "title_zh": "检查响应状态码",
        "title_en": "Check Response Status",
        "prompt_zh": "给定一组 URL，输出每个 URL 的状态码。",
        "prompt_en": "Given a list of URLs, output the status code for each.",
        "input_example": "[\"https://example.com\", \"https://httpstat.us/404\"]",
        "output_example": "[{\"url\":...,\"status\":200},{\"url\":...,\"status\":404}]",
        "hints_zh": "注意超时与重定向的处理。",
        "hints_en": "Handle timeouts and redirects.",
        "solution_zh": "使用 requests/fetch 请求 URL，读取 status 或 response.statusCode。",
        "solution_en": "Use requests/fetch, read status/statusCode from the response."
      },
      {
        "id": "content-type-filter",
        "title_zh": "过滤 HTML 内容",
        "title_en": "Filter HTML Content",
        "prompt_zh": "仅保留 Content-Type 为 text/html 的响应。",
        "prompt_en": "Keep only responses with Content-Type text/html.",
        "input_example": "[{\"url\":...,\"contentType\":...}]",
        "output_example": "[{\"url\":...,\"contentType\":\"text/html\"}]",
        "hints_zh": "有些站点会带 charset 参数。",
        "hints_en": "Some sites append charset parameters.",
        "solution_zh": "判断 content-type 是否以 text/html 开头，支持 charset。",
        "solution_en": "Check if content-type starts with text/html, including charset."
      }
    ],
    "projects": [
      {
        "id": "news-aggregator",
        "type": "practical",
        "title_zh": "资讯聚合器",
        "title_en": "News Aggregator",
        "requirements_zh": [
          "抓取 3 个来源的标题与链接",
          "去重并按时间排序",
          "输出为 JSON"
        ],
        "requirements_en": [
          "Fetch titles and links from 3 sources",
          "Deduplicate and sort by time",
          "Output JSON"
        ],
        "acceptance_zh": [
          "至少 30 条有效数据",
          "无重复标题",
          "字段齐全"
        ],
        "acceptance_en": [
          "At least 30 valid items",
          "No duplicate titles",
          "All fields present"
        ],
        "challenges_zh": [
          "页面结构不一致",
          "时间格式不同"
        ],
        "challenges_en": [
          "Inconsistent page structures",
          "Different time formats"
        ],
        "extensions_zh": [
          "加入关键词过滤",
          "每日定时抓取"
        ],
        "extensions_en": [
          "Add keyword filtering",
          "Schedule daily fetches"
        ]
      },
      {
        "id": "retry-rate-limit",
        "type": "technical",
        "title_zh": "限速与重试",
        "title_en": "Rate Limit and Retries",
        "requirements_zh": [
          "实现固定间隔的请求节流",
          "对 429/5xx 进行重试",
          "记录失败日志"
        ],
        "requirements_en": [
          "Implement fixed-interval throttling",
          "Retry on 429/5xx",
          "Log failures"
        ],
        "acceptance_zh": [
          "可配置重试次数",
          "最大重试后正确失败"
        ],
        "acceptance_en": [
          "Configurable retry count",
          "Fails correctly after max retries"
        ],
        "challenges_zh": [
          "避免重试风暴",
          "处理指数退避"
        ],
        "challenges_en": [
          "Avoid retry storms",
          "Handle exponential backoff"
        ],
        "extensions_zh": [
          "加入随机抖动",
          "支持并发限速"
        ],
        "extensions_en": [
          "Add jitter",
          "Support concurrency limits"
        ]
      }
    ]
  },
  {
    "id": "parsing-cleaning",
    "title_zh": "解析与清洗",
    "title_en": "Parsing and Cleaning",
    "time_estimate": "3-4 hours",
    "concepts": [
      {
        "id": "dom-selectors",
        "title_zh": "DOM 选择器",
        "title_en": "DOM Selectors",
        "summary_zh": "使用 CSS 选择器定位目标元素。",
        "summary_en": "Use CSS selectors to locate target elements.",
        "pitfalls_zh": "选择器过于脆弱，页面微调就失效。",
        "pitfalls_en": "Brittle selectors break with small layout changes.",
        "use_cases_zh": "提取标题、列表、表格数据。",
        "use_cases_en": "Extract titles, lists, and tables.",
        "terms": [
          { "zh": "选择器", "en": "selector" }
        ]
      },
      {
        "id": "data-normalization",
        "title_zh": "数据清洗与归一化",
        "title_en": "Cleaning and Normalization",
        "summary_zh": "统一空格、单位、日期格式。",
        "summary_en": "Normalize whitespace, units, and dates.",
        "pitfalls_zh": "忽略异常值会污染数据。",
        "pitfalls_en": "Ignoring outliers contaminates datasets.",
        "use_cases_zh": "为分析与存储做准备。",
        "use_cases_en": "Prepare data for analysis and storage.",
        "terms": [
          { "zh": "归一化", "en": "normalization" }
        ]
      }
    ],
    "exercises": [
      {
        "id": "css-selector-basics",
        "title_zh": "选择器练习",
        "title_en": "Selector Practice",
        "prompt_zh": "从给定 HTML 中提取课程标题列表。",
        "prompt_en": "Extract course titles from given HTML.",
        "input_example": "<ul><li class=\"course\">A</li></ul>",
        "output_example": "[\"A\"]",
        "hints_zh": "尽量避免使用过长的层级选择器。",
        "hints_en": "Avoid overly deep selectors.",
        "solution_zh": "用 .course 选择器提取文本并去空白。",
        "solution_en": "Use .course selector, read text, and trim."
      },
      {
        "id": "clean-whitespace",
        "title_zh": "清理空白字符",
        "title_en": "Clean Whitespace",
        "prompt_zh": "去除多余空格并统一换行。",
        "prompt_en": "Remove extra spaces and normalize newlines.",
        "input_example": "\"  Hello\n\nWorld \"",
        "output_example": "\"Hello\nWorld\"",
        "hints_zh": "先 trim，再合并连续空格。",
        "hints_en": "Trim first, then collapse whitespace.",
        "solution_zh": "用正则合并空白并标准化换行。",
        "solution_en": "Use regex to collapse whitespace and normalize newlines."
      }
    ],
    "projects": [
      {
        "id": "job-listing-cleaner",
        "type": "practical",
        "title_zh": "职位数据清洗",
        "title_en": "Job Listing Cleaner",
        "requirements_zh": [
          "抓取职位标题、公司、地点",
          "统一薪资区间格式",
          "输出为 CSV"
        ],
        "requirements_en": [
          "Fetch title, company, location",
          "Normalize salary ranges",
          "Export CSV"
        ],
        "acceptance_zh": [
          "字段完整且格式一致",
          "至少 50 条记录"
        ],
        "acceptance_en": [
          "Complete fields with consistent format",
          "At least 50 records"
        ],
        "challenges_zh": [
          "薪资单位不统一",
          "地点包含多级信息"
        ],
        "challenges_en": [
          "Inconsistent salary units",
          "Multi-level locations"
        ],
        "extensions_zh": [
          "添加关键词过滤",
          "支持导入数据库"
        ],
        "extensions_en": [
          "Add keyword filtering",
          "Support database import"
        ]
      },
      {
        "id": "structured-extraction",
        "type": "technical",
        "title_zh": "结构化抽取",
        "title_en": "Structured Extraction",
        "requirements_zh": [
          "对列表页与详情页做关联",
          "使用稳定选择器与备用方案",
          "记录解析失败的页面"
        ],
        "requirements_en": [
          "Link list and detail pages",
          "Use stable selectors with fallbacks",
          "Log pages that fail parsing"
        ],
        "acceptance_zh": [
          "解析失败率低于 5%",
          "日志可追溯"
        ],
        "acceptance_en": [
          "Parse failure rate under 5%",
          "Traceable logs"
        ],
        "challenges_zh": [
          "页面结构差异",
          "字段缺失"
        ],
        "challenges_en": [
          "Varying page structures",
          "Missing fields"
        ],
        "extensions_zh": [
          "加入规则测试用例",
          "输出抽取质量报告"
        ],
        "extensions_en": [
          "Add rule test cases",
          "Output extraction quality report"
        ]
      }
    ]
  },
  {
    "id": "requests-sessions",
    "title_zh": "请求与会话",
    "title_en": "Requests and Sessions",
    "time_estimate": "3-4 hours",
    "concepts": [
      {
        "id": "headers-cookies",
        "title_zh": "请求头与 Cookies",
        "title_en": "Headers and Cookies",
        "summary_zh": "通过请求头和 Cookie 模拟真实访问。",
        "summary_en": "Use headers and cookies to mimic real browsers.",
        "pitfalls_zh": "缺少 User-Agent 或 Cookie 会被拦截。",
        "pitfalls_en": "Missing User-Agent or cookies may trigger blocks.",
        "use_cases_zh": "登录态保持与会话复用。",
        "use_cases_en": "Maintain login state and reuse sessions.",
        "terms": [
          { "zh": "会话", "en": "session" },
          { "zh": "Cookie", "en": "cookie" }
        ]
      },
      {
        "id": "retry-timeout",
        "title_zh": "超时与重试策略",
        "title_en": "Timeouts and Retries",
        "summary_zh": "为不稳定网络设置超时与重试。",
        "summary_en": "Set timeouts and retry strategies for unstable networks.",
        "pitfalls_zh": "无限重试会导致阻塞与封禁。",
        "pitfalls_en": "Infinite retries cause stalls and bans.",
        "use_cases_zh": "稳定抓取与错误恢复。",
        "use_cases_en": "Stable crawling and recovery.",
        "terms": [
          { "zh": "超时", "en": "timeout" },
          { "zh": "重试", "en": "retry" }
        ]
      }
    ],
    "exercises": [
      {
        "id": "session-reuse",
        "title_zh": "会话复用",
        "title_en": "Session Reuse",
        "prompt_zh": "用同一会话连续请求多个页面。",
        "prompt_en": "Request multiple pages with a single session.",
        "input_example": "[\"/page1\", \"/page2\"]",
        "output_example": "[200, 200]",
        "hints_zh": "保持 cookie 与连接复用。",
        "hints_en": "Keep cookies and reuse connections.",
        "solution_zh": "创建 session 实例并循环请求 URL。",
        "solution_en": "Create a session instance and loop requests."
      },
      {
        "id": "timeout-backoff",
        "title_zh": "超时与退避",
        "title_en": "Timeout and Backoff",
        "prompt_zh": "请求失败时按退避策略重试。",
        "prompt_en": "Retry with backoff when requests fail.",
        "input_example": "{\"url\":\"/slow\"}",
        "output_example": "{\"attempts\":3,\"success\":true}",
        "hints_zh": "指数退避 + 最大重试次数。",
        "hints_en": "Use exponential backoff and max retries.",
        "solution_zh": "失败后按 1s, 2s, 4s 退避重试。",
        "solution_en": "Retry with 1s, 2s, 4s backoff."
      }
    ],
    "projects": [
      {
