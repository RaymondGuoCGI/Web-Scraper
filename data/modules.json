        "acceptance_zh": [
          "登录成功后返回正确字段",
          "失败时有清晰日志"
        ],
        "acceptance_en": [
          "Correct fields after login",
          "Clear logs on failure"
        ],
        "challenges_zh": [
          "验证码或二次验证",
          "Cookie 更新"
        ],
        "challenges_en": [
          "CAPTCHA or 2FA",
          "Cookie rotation"
        ],
        "extensions_zh": [
          "支持多账号轮换",
          "本地缓存会话"
        ],
        "extensions_en": [
          "Support account rotation",
          "Cache sessions locally"
        ]
      },
      {
        "id": "retry-pipeline",
        "type": "technical",
        "title_zh": "重试管道",
        "title_en": "Retry Pipeline",
        "requirements_zh": [
          "对失败任务入队",
          "限制重试次数",
          "统计失败原因"
        ],
        "requirements_en": [
          "Queue failed tasks",
          "Limit retry count",
          "Track failure reasons"
        ],
        "acceptance_zh": [
          "失败任务可追踪",
          "总体重试成功率可统计"
        ],
        "acceptance_en": [
          "Failed tasks traceable",
          "Retry success rate measurable"
        ],
        "challenges_zh": [
          "失败原因分类",
          "重试与限速联动"
        ],
        "challenges_en": [
          "Failure categorization",
          "Retry and rate limit coupling"
        ],
        "extensions_zh": [
          "失败任务报警",
          "支持不同重试策略"
        ],
        "extensions_en": [
          "Alert on failures",
          "Support multiple retry policies"
        ]
      }
    ]
  },
  {
    "id": "concurrency-performance",
    "title_zh": "并发与性能",
    "title_en": "Concurrency and Performance",
    "time_estimate": "3-5 hours",
    "concepts": [
      {
        "id": "async-batching",
        "title_zh": "异步与批处理",
